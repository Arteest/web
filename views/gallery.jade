extends layout

block content
  // Gallery
  .container
    .page-header
      h1 Gallery&nbsp;
        small of amazing
    #alerts(data-error=error)
      .error.alert.alert-danger
        strong.message
      .success.alert.alert-success
        strong.message
    .panel.panel-default
      .panel-heading
        h3.panel-title Canvases by Date     
      .list-group
        each polyptych, index in canvases
          a.list-group-item(href="/draw/#{polyptych[polyptych.length-1]._id}")
            +canvases()
              each canvas in polyptych
                +canvas(canvas)(width="100", height="100", class="link")