extends layout

block content
	// Home
	.container
		h1.logo.logo-big.logo-center #{title}
	.container.definition
		.row
			.col-sm-6.col-sm-offset-3
				blockquote
					p "An artist who takes nobody and nothing seriously, not even themselves, and uses humor and parody in their art."
					footer 
						cite 
							a(href="http://www.urbandictionary.com/define.php?term=arteest", target="_blank") Urban Dictionary
	.container.steps
		.row.step-1
			.col-sm-3.col-sm-offset-3
				h2 Draw
				p Draw something awesome that you can share with your friends. 
				p
					em Draw 
						strong New York City!
		.row.step-2
			.col-sm-3.col-sm-offset-6
				h2 Share
				p When you're done, share it with a friend who can continue the drawing. 
				p
					em
						strong Raar! 
						span a 
						strong Dinosaur 
						span attacks 
						strong New York City!
		.row.step-3
			.col-sm-3.col-sm-offset-3
				h2 Repeat
				p Keep sharing your drawings to create a masterpiece!
				p
					em Our 
						strong Hero 
						span saves the day! 
						strong New York City 
						span rejoices!

		.row
			.col-sm-6.col-sm-offset-3
				a.btn.btn-default.center-block(href="/draw") Start Drawing!